<?xml version="1.0" encoding="UTF-8"?>
<tobi-config version="1.0">
	<subject>
		<id>007</id>
		<first_name>James</first_name>
		<surname>Bond</surname>
		<sex>m</sex>
		<birthday>02.02.1953</birthday>
	</subject>

<!-- =============================================================================== -->

	<server_settings>
		<tcp_port>9998</tcp_port>
		<ctl_port>9000</ctl_port>
		<udp_port>9998</udp_port>
		<tid_server tid_use="on" tid_port="9500" assume_zero_network_delay="on" />
		<udp_bc_addr>127.0.0.1</udp_bc_addr>
		
 		<store-data value="on">
			<filepath>raw</filepath>
			<filename>raweeg</filename>
			<filetype>gdf</filetype>
			<file_exists> new_file </file_exists>
			<append_to_filename> _r_ </append_to_filename>
			<continous_saving> yes </continous_saving>
		</store-data>
		
	</server_settings>

<!-- =============================================================================== -->

  <hardware name="imu" version="1.0" serial="">
    <mode> master </mode>
    <device_settings>
      <sampling_rate> 50 </sampling_rate>
      <blocksize> 5 </blocksize>
	  <port> 9123 </port>
	  
      <measurement_channels nr="19" names="abc" type="sensor" />
	  
      <filter type="chebyshev" order="8" f_low="0.5" f_high="100"/>      
      <notch f_center="50"/> 
      <operation_mode> normal </operation_mode>
      <shortcut> off </shortcut>
      <trigger_line> off </trigger_line>
      <usbamp_master> yes </usbamp_master>
	  <common_ground>
        <gnd block="a" value="1" />
        <gnd block="b" value="1" />
        <gnd block="c" value="1" />
        <gnd block="d" value="1" />
      </common_ground>
      <common_reference>
        <cr block="a" value="1" />
        <cr block="b" value="1" />
        <cr block="c" value="1" />
        <cr block="d" value="1" />
      </common_reference>
    </device_settings>

    <channel_settings>
      <selection>
        <ch nr="01" name="X0"  type="sensor" />
        <ch nr="02" name="X1"  type="sensor" />
        <ch nr="03" name="X2"  type="sensor" />
        <ch nr="04" name="Y0"  type="sensor" />
        <ch nr="05" name="Y1"  type="sensor" />
        <ch nr="06" name="Y2"  type="sensor" />
        <ch nr="07" name="Z0"  type="sensor" />
        <ch nr="08" name="Z1"  type="sensor" />
        <ch nr="09" name="Z2"  type="sensor" />
        <ch nr="10" name="accX"  type="sensor" />
        <ch nr="11" name="accY"  type="sensor" />
        <ch nr="12" name="accZ"  type="sensor" />
        <ch nr="13" name="gyrX"  type="sensor" />
        <ch nr="14" name="gyrY"  type="sensor" />
        <ch nr="15" name="gyrZ"  type="sensor" />
        <ch nr="16" name="magX"  type="sensor" />
        <ch nr="17" name="magY"  type="sensor" />
        <ch nr="18" name="magZ"  type="sensor" />
        <ch nr="19" name="temp"  type="sensor" />
      </selection>
    </channel_settings>
  </hardware>

</tobi-config>
